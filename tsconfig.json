{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/types/*": ["types/*"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["ali-oss", "esdk-obs-browserjs/index.d.ts"],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  // "files": ["types/index.ts", "types/esdk-obs-browserjs/index.d.ts"],
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["dist", "node_modules", "**/test"]
}
